<section class="w-100 d-md-table featurette_bundle featurette_bundle_override" aria-label="Featurettes" data-animate-featurette="{{ content.field_featurettes_animation[0] }}">
	<section class="featurettes d-md-table-cell align-middle">
		<section class="container">
			<div class="row h-100">
			{%  if float_left == 1 %}
		   		<div class="col-lg-2 col-md-2 right featurettes_text my-auto d-md-table-cell align-middle">
			  		<aside class="featurette text-center text-md-left mb-3">
					  {%  if true in content.field_featurette_header[0] %}
					  <h1 class="featurette-heading">{{ content.field_featurette_header[0] }}</h1>
					  {% endif %}

					  {%  if true in content.field_featurette_subtext[0] %}
					  <p class="lead">{{ content.field_featurette_subtext[0] }}</p>
					  {% endif %}

					  {%  if true in content.field_featurette_hyperlink[0] %}
					  <section class="hyperlinks">
					  	<a class="btn btn-dark" href="{{ content.field_featurette_hyperlink[0]['#url'] }}">{{ content.field_featurette_hyperlink[0]['#title'] }}&nbsp;<i class="fa fa-arrow-circle-right"></i></a>
					  </section>
          			  {% endif %}
					</aside>
				</div>
		   		<div class="col-lg-10 col-md-10 featurettes_image d-md-table-cell align-middle {{ circular_image }}"2	>
				   <div class="parallax" style="background-image:url('{{ image_url }}')">&nbsp;</div>
				</div>
		   {% endif %}

			{%  if float_left == 0 %}
			<div class="col-lg-10 col-md-10  featurettes_image  {{ circular_image }}">
				<div class="parallax" style="background-image:url('{{ image_url }}')">&nbsp;</div>
			</div>
			 <div class="col-lg-2 col-md-2 left featurettes_text my-auto ">
			 	<aside class="featurette text-center text-md-left mb-3">
					{%  if true in content.field_featurette_header[0] %}
					<h1 class="featurette-heading">{{ content.field_featurette_header[0] }}</h1>
					{% endif %}

					{%  if true in content.field_featurette_subtext[0] %}
					<p class="lead">{{ content.field_featurette_subtext[0] }}</p>
					{% endif %}

					{%  if true in content.field_featurette_hyperlink[0] %}
					<section class="hyperlinks">
						<a class="btn btn-dark" href="{{ content.field_featurette_hyperlink[0]['#url'] }}">{{ content.field_featurette_hyperlink[0]['#title'] }}&nbsp;<i class="fa fa-arrow-circle-right"></i></a>
					</section>
					{% endif %}
				</aside>
			 </div>
		   {% endif %}
		  </div>
		</section>
	</section>
</section>
